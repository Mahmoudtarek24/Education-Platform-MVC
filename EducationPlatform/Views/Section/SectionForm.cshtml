@model SectionViewModel

<form asp-action="@(Model?.SectionId > 0 ? "Update" : "Create")"
	  asp-controller="Section"
	  data-ajax-method="post"
	  data-ajax="true"
	  data-ajax-success="OnModalSuccess">

	@if (Model?.SectionId > 0)
	{
		<input type="hidden" asp-for="SectionId" />
	}
	<input type="hidden" asp-for="CourseId" />
	<div class="mb-5">
		<div class="form-floating mb-2">
			<input type="text" class="form-control" placeholder="Name" asp-for="Name" />
			<label asp-for="Name"></label>
		</div>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="mb-5">
		<div class="form-floating mb-2">
			<input type="text" class="form-control" placeholder="Name" asp-for="Order" />
			<label asp-for="Order"></label>
		</div>
		<span asp-validation-for="Order" class="text-danger"></span>
	</div>

	@Html.AntiForgeryToken()
	<partial name="~/Views/Section/_ModalFooter.cshtml" />
</form>

