@model LoginViewModel
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div style="max-width: 500px; width: 100%;">
        <div class="card shadow" style="min-height: 450px;">
            <article class="card-body p-4">
                <a asp-controller="Account" asp-action="Register" class="float-end btn btn-outline-primary btn-md" style="font-size: 1.1rem;">Sign up</a>
                <h2 class="card-title mb-4 mt-1" style="font-size: 1.75rem;">Sign in</h2>

                <div class="d-grid gap-2 mb-3">
                    <a href="#" class="btn btn-outline-primary"><i class="fab fa-facebook-f"></i> Login via Facebook</a>
                </div>

                <hr />

                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" />
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-primary btn-lg px-4 py-2" style="font-size: 1.2rem;">Login</button>
                        <a asp-action="ForgetPassword" asp-controller="Account"  class="small">Forgot password?</a>
                    </div>
                </form>
            </article>
        </div>
    </div>
</div>

@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial");
}